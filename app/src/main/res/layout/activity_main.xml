<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".view.MainActivity">

    <EditText
        android:id="@+id/txt_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/one_word"
        android:inputType="text"
        android:layout_marginBottom="@dimen/standar_margins"
        android:autofillHints="" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/equal"
        android:textSize="@dimen/equal_size"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/standar_margins"
        android:layout_marginBottom="@dimen/standar_margins" />

    <EditText
        android:id="@+id/txt_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/another_word"
        android:inputType="text"
        android:layout_marginTop="@dimen/standar_margins"
        android:layout_marginBottom="@dimen/standar_margins"
        android:autofillHints="" />

    <Button
        android:id="@+id/btn_compare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_comparation"
        android:layout_marginTop="@dimen/standar_margins"
        android:layout_marginBottom="@dimen/standar_margins"
        android:layout_marginEnd="@dimen/button_margins"
        android:layout_marginStart="@dimen/button_margins" />

    <TextView
        android:id="@+id/txt_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standar_margins"
        android:textAlignment="center" />

</LinearLayout>